///////////////////////////////////////////////////////////
/// @file debug.h.in
/// Functions, constants, and macros for debugging libSBOL.
/// CMake uses this file to generate debug.h. 
///////////////////////////////////////////////////////////

#ifndef SBOL_DEBUG_HEADER
#define SBOL_DEBUG_HEADER

// forward declarations
struct _DNASequence;
struct _SequenceAnnotation;
struct _DNAComponent;
struct _Collection;

#cmakedefine SBOL_DEBUG_STATEMENTS ///< Set using CMake. Adds some print statements for debugging.

void indent(int tabs);

/// Print an outline of a DNAComponent to stdout.
void printDNAComponent(const struct _DNAComponent* com, int tabs);

void printSequenceAnnotation(const struct _SequenceAnnotation* seq, int tabs);

/// Print an outline of a Collection to stdout.
void printCollection(const struct _Collection* col, int tabs);

void printDNASequence(const struct _DNASequence* seq, int tabs);

void printAllSequenceAnnotations();

/// Print an outline of all the DNAComponents to stdout.
void printAllDNAComponents();

void printAllDNASequences();

/// Print an outline of all the Collections to stdout.
void printAllCollections();

void printSBOLCore();

#endif
